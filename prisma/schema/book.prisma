model Book {
  id          String   @id @default(uuid())
  title       String
  author      String
  isbn        String   @unique
  cover       String?
  description String?
  genre       String
  condition   String
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  location    String
  status      Status   @default(available)
  rating      Float    @default(0)
  reviews     Review[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Status {
  available
  borrowed
  returned
}
